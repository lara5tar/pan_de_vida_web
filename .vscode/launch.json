{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Web (Codespaces)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-port",
                "3000",
                "--web-hostname",
                "0.0.0.0"
            ],
            "flutterMode": "debug",
            "env": {
                "CHROME_EXECUTABLE": "/usr/bin/chromium-browser"
            }
        },
        {
            "name": "Flutter Web (Chrome)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "3000"
            ],
            "flutterMode": "debug",
            "env": {
                "CHROME_EXECUTABLE": "/usr/bin/chromium-browser",
                "DISPLAY": ":99"
            }
        },
        {
            "name": "Flutter Android (Codespaces)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "android"
            ],
            "flutterMode": "debug"
        }
    ]
}