{
    "name": "Flutter for GitHub Codespaces",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "containerEnv": {
        "ANDROID_SDK_ROOT": "/home/vscode/android-sdk",
        "FLUTTER_ROOT": "/home/vscode/flutter",
        "PATH": "${PATH}:/home/vscode/flutter/bin:/home/vscode/android-sdk/cmdline-tools/latest/bin:/home/vscode/android-sdk/platform-tools",
        "CHROME_EXECUTABLE": "/usr/bin/chromium-browser",
        "DISPLAY": ":99"
    },
    "remoteUser": "vscode",
    "onCreateCommand": "bash .devcontainer/on-create.sh",
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    "forwardPorts": [
        3000,
        8080,
        5000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Flutter Web App",
            "onAutoForward": "notify"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter",
                "ms-vscode.vscode-json",
                "bradlc.vscode-tailwindcss",
                "GitHub.copilot"
            ],
            "settings": {
                "dart.flutterSdkPath": "/home/vscode/flutter",
                "dart.debugExternalLibraries": true,
                "dart.debugSdkLibraries": true,
                "flutter.hot-reload-on-save": true,
                "dart.lineLength": 100,
                "editor.formatOnSave": true
            }
        }
    }
}